  "definitions": {
    "Trunks": {
      "description": "SIP trunks for routing calls",
      "type": "object",
      "properties": {
        "values": {
          "description": "Represents an array of SIP trunks for routing calls",
          "maxLength": 250,
          "type": "array",
          "items": {
            "$ref": "#/definitions/SBCStatus"
          }
        },
        "nextLink": {
          "description": "Link to next page of resources.",
          "type": "string",
          "readOnly": true
        }
      }
    },
    "SBCStatus": {
      "description": "Represents a trunk's SBC status",
      "required": [
        "fqdn",
        "tls",
        "ping",
        "trunkOverallStatus",
        "lastUpdateTime"
      ],
      "type": "object",
      "properties": {
        "fqdn": {
          "description": "Trunk's FQDN of the paired SBC",
          "maxLength": 256,
          "type": "string"
        },
        "tls": {
          "description": "The status of the TLS connections between Direct Routing and the SBC",
          "maxLength": 256,
          "type": "string",
          "enum": [
            "NoData",
            "OK",
            "CertExpiring",
            "CertExpired"
          ]
        },
        "ping": {
          "description": "The status of options message send by SBC",
          "maxLength": 256,
          "type": "string",
          "enum": [
            "NoData",
            "OK",
            "PingError",
            "PingExpired"
          ]
        },
        "trunkOverallStatus": {
          "description": "The overall status of SBC",
          "maxLength": 256,
          "type": "string",
          "enum": [
            "NoData",
            "Active",
            "InactiveNoRecentPings",
            "InactiveNoRecentPingsAndCalls",
            "InactiveNoRecentCalls"
          ]
        },
        "lastUpdateTime": {
          "description": "The last time the status has been updated",
          "maxLength": 256,
          "type": "string"
        }
      }
    }
  },
